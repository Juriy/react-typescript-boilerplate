{
    "name": "react-typescript-boilerplate",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "author": "Tamas Mezei",
    "repository": {
        "type": "git",
        "url": "git@github.com:mezeitamas/react-typescript-boilerplate.git"
    },
    "scripts": {
        "clean": "rimraf dist/ reports/",
        "format:check": "prettier '**/*.{js,ts,tsx,json,md,yml,yaml}' --check",
        "format:fix": "prettier '**/*.{js,ts,tsx,json,md,yml,yaml}' --write",
        "lint:check": "eslint 'src/**/*.{ts,tsx}' '*.config.js'",
        "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}' '*.config.js'",
        "type:check": "tsc --noEmit",
        "test:unit:check": "jest",
        "test:unit:update": "jest --updateSnapshot",
        "audit:check": "npm audit --package-lock-only --omit=dev",
        "bundle": "webpack --config webpack.config.js",
        "start": "webpack serve --config webpack.serve.config.js"
    },
    "engines": {
        "node": ">=18.16.0",
        "npm": ">=9.5.0"
    },
    "dependencies": {
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-router-dom": "6.15.0",
        "web-vitals": "3.4.0"
    },
    "devDependencies": {
        "@babel/cli": "7.22.10",
        "@babel/core": "7.22.10",
        "@babel/preset-env": "7.22.10",
        "@babel/preset-react": "7.22.5",
        "@babel/preset-typescript": "7.22.5",
        "@types/jest": "29.5.3",
        "@types/react": "18.2.20",
        "@types/react-dom": "18.2.7",
        "@types/react-test-renderer": "18.0.0",
        "@typescript-eslint/eslint-plugin": "6.3.0",
        "@typescript-eslint/parser": "6.3.0",
        "babel-loader": "9.1.3",
        "circular-dependency-plugin": "5.2.2",
        "dotenv": "16.3.1",
        "eslint": "8.47.0",
        "eslint-import-resolver-typescript": "3.6.0",
        "eslint-plugin-babel": "5.3.1",
        "eslint-plugin-import": "2.28.0",
        "eslint-plugin-jest": "27.2.3",
        "eslint-plugin-react": "7.33.1",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-testing-library": "6.0.0",
        "html-webpack-plugin": "5.5.3",
        "jest": "29.6.2",
        "jest-environment-jsdom": "29.6.2",
        "prettier": "3.0.1",
        "react-shallow-renderer": "16.15.0",
        "react-test-renderer": "18.2.0",
        "rimraf": "5.0.1",
        "typescript": "5.1.6",
        "webpack": "5.88.2",
        "webpack-bundle-analyzer": "4.9.0",
        "webpack-cli": "5.1.4",
        "webpack-dev-server": "4.15.1",
        "webpack-merge": "5.9.0",
        "webpack-subresource-integrity": "5.1.0"
    }
}
